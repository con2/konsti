{
  "name": "konsti-monorepo",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "client": "yarn workspace konsti-client start",
    "server": "yarn workspace konsti-server start-dev",
    "start": "concurrently --kill-others-on-fail \"yarn server\"  \"yarn client\"",
    "prettier:check": "prettier --check \"./**/*.{js,json,md,ts,tsx,yml}\"",
    "prettier:write": "prettier --write \"./**/*.{js,json,md,ts,tsx,yml}\"",
    "lint": "npm run eslint && npm run stylelint && npm run prettier:check",
    "eslint": "eslint . --ext .js,.ts,.tsx",
    "eslint-rules": "eslint --print-config .eslintrc.js",
    "stylelint": "stylelint ./**/*.{ts,tsx}"
  },
  "resolutions": {
    "@types/react-native": "npm:@types/react@*"
  },
  "dependencies": {
    "babel-plugin-module-resolver": "4.0.0",
    "concurrently": "5.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.11.5",
    "@babel/node": "7.10.5",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@babel/register": "7.11.5",
    "@types/eslint": "7.2.2",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/jest": "26.0.13",
    "@types/stylelint": "9.10.1",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.3.0",
    "babel-plugin-lodash": "3.3.4",
    "eslint": "7.8.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-standard-with-typescript": "19.0.1",
    "eslint-import-resolver-babel-module": "5.1.2",
    "eslint-plugin-compat": "3.8.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.20.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.20.6",
    "eslint-plugin-react-hooks": "4.1.0",
    "husky": "4.2.5",
    "jest": "26.4.2",
    "lint-staged": "10.2.13",
    "prettier": "2.1.1",
    "stylelint": "13.7.0",
    "stylelint-a11y": "1.2.3",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "20.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-no-unsupported-browser-features": "4.0.0",
    "stylelint-processor-styled-components": "1.10.0",
    "typescript": "4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
