{
  "name": "konsti-monorepo",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "build-front:ci": "yarn workspace konsti-client build:ci && yarn copy-front",
    "build-front:dev": "yarn workspace konsti-client build:dev && yarn copy-front",
    "build-front:prod": "yarn workspace konsti-client build:prod && yarn copy-front",
    "build-front:staging": "yarn workspace konsti-client build:staging && yarn copy-front",
    "client": "yarn workspace konsti-client start",
    "copy-front": "rimraf server/front && ncp client/build server/front",
    "playwright": "yarn workspace konsti-client playwright",
    "docker-compose:start": "yarn build-front:dev && docker compose -f ./docker/docker-compose.yml up --detach --build --remove-orphans",
    "docker-compose:stop": "docker compose -f ./docker/docker-compose.yml down --remove-orphans",
    "docker-compose:test": "yarn build-front:ci && docker compose -f ./docker/docker-compose.yml -f ./client/playwright/docker-compose.yml up --attach playwright --attach server --build --remove-orphans --exit-code-from playwright --abort-on-container-exit",
    "docker:build-prod": "yarn build-front:prod && docker build . -t konsti-prod",
    "docker:build-staging": "yarn build-front:staging && docker build . -t konsti-staging",
    "docker:build-dev": "yarn build-front:dev && docker build . -t konsti-dev",
    "docker:start": "docker run -p 5000:5000 -d --env-file ./docker/docker-dev.env konsti-dev",
    "docker:db": "docker run -p 27017:27017 -d mongo:5.0.14-focal",
    "eslint-rules": "eslint --print-config .eslintrc.js",
    "eslint:client": "yarn workspace konsti-client eslint",
    "eslint:server": "yarn workspace konsti-server eslint",
    "eslint": "eslint . --ext .js,.ts,.tsx --cache",
    "lint": "yarn eslint && yarn stylelint && yarn prettier:check",
    "populate-db:dummy": "yarn workspace konsti-server generate-data -ugcs",
    "populate-db:kompassi": "yarn workspace konsti-server generate-data -c && yarn workspace konsti-server load-kompassi-data && yarn workspace konsti-server generate-data -us ",
    "prepare": "is-ci || husky install",
    "prettier:check": "prettier --check \"./**/*.{js,json,md,ts,tsx,yml}\"",
    "prettier:write": "prettier --write \"./**/*.{js,json,md,ts,tsx,yml}\"",
    "server": "yarn workspace konsti-server start:dev",
    "start:dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "yarn workspace konsti-server start",
    "stylelint": "yarn workspace konsti-client stylelint",
    "test-assign": "yarn workspace konsti-server test-assign",
    "test:watch": "yarn jest --watch",
    "test": "yarn jest",
    "type-check": "tsc --noEmit",
    "update-yarn": "yarn set version stable && yarn plugin import interactive-tools && yarn plugin import workspace-tools"
  },
  "dependencies": {
    "@babel/cli": "7.20.7",
    "@babel/core": "7.20.12",
    "@babel/node": "7.20.7",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@babel/register": "7.18.9",
    "@sentry/tracing": "7.36.0",
    "axios": "1.3.2",
    "babel-plugin-lodash": "3.3.4",
    "babel-plugin-module-resolver": "5.0.0",
    "concurrently": "7.6.0",
    "dayjs": "1.11.7",
    "lodash": "4.17.21",
    "ncp": "2.0.0",
    "rimraf": "4.1.2",
    "tsconfig-paths": "4.1.2",
    "typescript": "4.9.5",
    "zod": "3.20.2"
  },
  "devDependencies": {
    "@types/jest": "29.4.0",
    "@types/lodash": "4.14.191",
    "@typescript-eslint/eslint-plugin": "5.50.0",
    "@typescript-eslint/parser": "5.50.0",
    "cross-env": "7.0.3",
    "eslint": "8.33.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-standard-with-typescript": "34.0.0",
    "eslint-import-resolver-babel-module": "5.3.2",
    "eslint-plugin-ban": "1.6.0",
    "eslint-plugin-compat": "4.0.2",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-n": "15.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-testing-library": "5.10.0",
    "eslint-plugin-unicorn": "45.0.2",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "29.4.2",
    "jest-extended": "3.2.3",
    "lint-staged": "12.5.0",
    "prettier": "2.8.4",
    "ts-jest": "29.0.5"
  },
  "engines": {
    "node": ">=18.13.0"
  },
  "packageManager": "yarn@3.4.1"
}
