{
  "name": "konsti-monorepo",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "build-front:ci": "yarn workspace konsti-client build:ci && yarn copy-front",
    "build-front:dev": "yarn workspace konsti-client build:dev && yarn copy-front",
    "build-front:kube-dev": "yarn workspace konsti-client build:kube-dev && yarn copy-front",
    "build-front:prod": "yarn workspace konsti-client build:prod && yarn copy-front",
    "build-front:staging": "yarn workspace konsti-client build:staging && yarn copy-front",
    "build-server": "yarn workspace konsti-server build",
    "client": "yarn workspace konsti-client start",
    "copy-front": "rimraf server/front && ncp client/build server/front",
    "playwright": "yarn workspace konsti-client playwright",
    "docker-compose:start": "APP_SETTINGS=development docker compose -f ./docker/docker-compose.yml up --detach --build --remove-orphans",
    "docker-compose:stop": "APP_SETTINGS=development docker compose -f ./docker/docker-compose.yml down --remove-orphans",
    "docker-compose:test": "APP_SETTINGS=ci docker compose -f ./docker/docker-compose.yml -f ./client/playwright/docker-compose.yml up --build --remove-orphans",
    "docker:build-prod": "docker build --build-arg env=prod . -t konsti-prod",
    "docker:build-staging": "docker build --build-arg env=staging . -t konsti-staging",
    "docker:build-dev": "docker build --build-arg env=dev . -t konsti-dev",
    "docker:start-dev-with-local-db": "yarn docker:build-dev && docker run -p 5000:5000 -d --env-file ./docker/docker-dev.env konsti-dev",
    "docker:db": "yarn docker:db-run 2>/dev/null || yarn docker:db-start",
    "docker:db-run": "docker run -p 27017:27017 -d --name konsti-mongodb mongo:6.0.8-jammy",
    "docker:db-start": "docker start konsti-mongodb",
    "eslint-save-config": "yarn workspaces foreach run eslint-save-config",
    "eslint-timings": "cross-env TIMING=1 yarn eslint",
    "eslint:client": "yarn workspace konsti-client eslint",
    "eslint:server": "yarn workspace konsti-server eslint",
    "eslint": "eslint . --ext .js,.ts,.tsx",
    "lint": "yarn eslint && yarn stylelint && yarn prettier:check",
    "populate-db:dummy": "yarn workspace konsti-server generate-data -ugcsl",
    "populate-db:kompassi": "yarn workspace konsti-server generate-data -c && yarn workspace konsti-server load-kompassi-data && yarn workspace konsti-server generate-data -usl",
    "prepare": "is-ci || husky install",
    "prettier:check": "prettier --check \"./**/*.{js,json,mdx,ts,tsx,yml}\"",
    "prettier:write": "prettier --write \"./**/*.{js,json,mdx,ts,tsx,yml}\"",
    "server": "yarn workspace konsti-server start:dev",
    "start:dev": "yarn docker:db && concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "yarn workspace konsti-server start",
    "stylelint": "yarn workspace konsti-client stylelint",
    "test-assign": "yarn workspace konsti-server test-assign",
    "test:watch": "yarn vitest watch",
    "test": "yarn vitest run",
    "type-check": "tsc --noEmit",
    "update-yarn": "yarn set version stable && yarn plugin import interactive-tools && yarn plugin import workspace-tools"
  },
  "dependencies": {
    "@babel/cli": "7.22.15",
    "@babel/core": "7.22.20",
    "@babel/node": "7.22.19",
    "@babel/preset-env": "7.22.20",
    "@babel/preset-react": "7.22.15",
    "@babel/preset-typescript": "7.22.15",
    "axios": "1.5.0",
    "babel-plugin-lodash": "3.3.4",
    "babel-plugin-module-resolver": "5.0.0",
    "concurrently": "8.2.1",
    "dayjs": "1.11.9",
    "lodash": "4.17.21",
    "ncp": "2.0.0",
    "rimraf": "5.0.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.2.2",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@types/lodash": "4.14.198",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "cross-env": "7.0.3",
    "eslint": "8.49.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.6.0",
    "eslint-plugin-ban": "1.6.0",
    "eslint-plugin-compat": "4.2.0",
    "eslint-plugin-deprecation": "2.0.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-n": "16.1.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-testing-library": "6.0.1",
    "eslint-plugin-unicorn": "48.0.1",
    "eslint-plugin-vitest": "0.3.1",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "lint-staged": "14.0.1",
    "prettier": "3.0.3",
    "vitest": "0.34.4"
  },
  "engines": {
    "node": ">=18.17.1"
  },
  "packageManager": "yarn@3.6.3",
  "resolutions": {
    "babel-plugin-lodash/@babel/types": "7.20.7",
    "babel-plugin-styled-components": "2.1.3"
  }
}
