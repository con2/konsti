{
  "name": "konsti-monorepo",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "build": "concurrently \"yarn build:client\" \"yarn build:server\"",
    "build-front:dev": "yarn workspace konsti-client build:dev && yarn copy-front",
    "build-front:ci": "yarn workspace konsti-client build:ci && yarn copy-front",
    "build-front:prod": "yarn workspace konsti-client build:prod && yarn copy-front",
    "build-front:staging": "yarn workspace konsti-client build:staging && yarn copy-front",
    "build:client": "yarn workspace konsti-client build:prod",
    "build:server": "yarn workspace konsti-server build",
    "build:cypress": "yarn workspace konsti-client build:cypress",
    "client": "yarn workspace konsti-client start",
    "copy-front": "rimraf server/front && ncp client/build server/front",
    "deploy-prod": "yarn prepare-deploy:prod && eb deploy konsti-prod",
    "deploy-staging": "yarn prepare-deploy:staging && eb deploy konsti-staging",
    "docker:start": "yarn build-front:dev && docker-compose up --detach --build --remove-orphans",
    "docker:stop": "docker-compose down --remove-orphans",
    "docker:test": "yarn build-front:ci && yarn build:cypress && docker-compose -f ./docker-compose.yml -f ./client/cypress/docker-compose.yml up --build --remove-orphans --exit-code-from cypress --abort-on-container-exit",
    "eslint": "eslint . --ext .js,.ts,.tsx",
    "eslint-rules": "eslint --print-config .eslintrc.js",
    "eslint:client": "yarn workspace konsti-client eslint",
    "eslint:server": "yarn workspace konsti-server eslint",
    "lint": "yarn eslint && yarn stylelint && yarn prettier:check",
    "prepare-deploy:prod": "yarn build-front:prod && yarn build:server",
    "prepare-deploy:staging": "yarn build-front:staging && yarn build:server",
    "prettier:check": "prettier --check \"./**/*.{js,json,md,ts,tsx,yml}\"",
    "prettier:write": "prettier --write \"./**/*.{js,json,md,ts,tsx,yml}\"",
    "server": "yarn workspace konsti-server start:dev",
    "start": "yarn workspace konsti-server start",
    "start-and-populate-db": "yarn workspace konsti-server generate-data -ugs && yarn start",
    "start:dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "stylelint": "yarn workspace konsti-client stylelint",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "cypress:run": "yarn workspace konsti-client cypress:run",
    "cypress:open": "yarn workspace konsti-client cypress:open"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@babel/cli": "7.13.0",
    "@babel/core": "7.13.8",
    "@babel/node": "7.13.0",
    "@babel/preset-env": "7.13.8",
    "@babel/preset-react": "7.12.13",
    "@babel/preset-typescript": "7.13.0",
    "@babel/register": "7.13.8",
    "babel-plugin-lodash": "3.3.4",
    "babel-plugin-module-resolver": "4.1.0",
    "concurrently": "6.0.0",
    "lodash": "4.17.21",
    "moment": "2.29.1",
    "ncp": "2.0.0",
    "rimraf": "3.0.2"
  },
  "devDependencies": {
    "@types/eslint": "7.2.6",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/jest": "26.0.20",
    "@types/lodash": "4.14.168",
    "@types/ncp": "2.0.4",
    "@types/prettier": "2.2.1",
    "@types/rimraf": "3.0.0",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "babel-jest": "26.6.3",
    "cross-env": "7.0.3",
    "eslint": "7.21.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-config-standard-with-typescript": "20.0.0",
    "eslint-import-resolver-babel-module": "5.2.0",
    "eslint-plugin-compat": "3.9.0",
    "eslint-plugin-cypress": "2.11.2",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.5",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-unicorn": "28.0.2",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "type-fest": "0.21.2",
    "typescript": "4.1.3"
  },
  "engines": {
    "node": ">=12.x.x"
  }
}
