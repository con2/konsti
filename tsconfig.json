{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2017", "esnext", "dom"],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowUnreachableCode": false,
    "noErrorTruncation": true,
    "paths": {
      "client/*": ["client/src/*"],
      "server/*": ["server/src/*"],
      "shared/*": ["shared/*"],
      "playwright/*": ["client/playwright/*"]
    }
  },
  "include": [
    "client",
    "server",
    "shared",
    ".eslintrc.js",
    "babel.config.js",
    "lint-staged.config.js",
    "vitest.workspace.ts",
    "yarn.config.cjs"
  ],
  "exclude": ["node_modules", "server/lib", "server/coverage"]
}
